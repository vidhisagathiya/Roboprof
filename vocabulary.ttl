cu:hasContent a rdf:Property ;
    rdfs:label "hasContent" ;
    rdfs:comment "Specifies the content of an entity." .

cu:hasSlides a rdf:Property ;
    rdfs:label "hasSlides" ;
    rdfs:comment "Specifies the slides associated with an entity." .

cu:hasWorksheets a rdf:Property ;
    rdfs:label "hasWorksheets" ;
    rdfs:comment "Specifies the worksheets associated with an entity." .

cu:hasReadings a rdf:Property ;
    rdfs:label "hasReadings" ;
