@prefix cu: <http://is-concordia.io/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix teach: <http://linkedscience.org/teach/ns#> .
@prefix dbo: <http://dbpedia.org/ontology/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix dbr:       <http://dbpedia.org/resource/> .
@prefix owl:       <http://www.w3.org/2002/07/owl#> .

#Classes
cu:University
    a               rdfs:Class ;
    rdfs:subClassOf foaf:Organization ;
    owl:sameAs      dbr:University ;
    rdfs:label      "University"@en .

cu:Course a rdfs:Class ;
    rdfs:subClassOf teach:Course ;
    rdfs:label      "Course"@en .

cu:CourseComponent a rdfs:Class ;
    rdfs:subClassOf dbo:Event ;
    rdfs:label      "Course Component"@en .

cu:Lecture
    a               rdfs:Class ;
    rdfs:subClassOf cu:CourseComponent ;
    owl:sameAs      teach:Lecture;
    rdfs:label      "Lecture"@en .

cu:LectureMaterial a rdfs:Class ;
    rdfs:subClassOf teach:Material ;
    rdfs:label      "Course"@en .

cu:Slide a rdfs:Class ;
    rdfs:subClassOf cu:LectureMaterial ;
    rdfs:label      "Slide"@en .

cu:Worksheet
    a rdfs:Class ;
    rdfs:subClassOf cu:LectureMaterial ;
    rdfs:label      "Worksheet"@en .

cu:Reading
    a               rdfs:Class ;
    rdfs:subClassOf cu:LectureMaterial ;
    rdfs:label      "Worksheet"@en .


cu:Lab
    a               rdfs:Class ;
    rdfs:subClassOf cu:CourseComponent ;
    rdfs:label      "Laboratory"@en .

cu:Tutorial
    a               rdfs:Class ;
    rdfs:subClassOf cu:CourseComponent ;
    rdfs:label      "Tutorial"@en .




# Properties
cu:Offers
    a            rdf:Property ;
    rdfs:label   "Offers"@en ;
    rdfs:comment "Classes a university offers"@en ;
    rdfs:domain  cu:University ;
    rdfs:range   cu:Course .



cu:hasName a rdf:Property ;
    rdfs:label "hasName" ;
    rdfs:comment "Specifies the name of an entity." .

