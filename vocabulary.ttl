    rdfs:label "hasSubject" ;
    rdfs:comment "Specifies the subject of an entity." .

cu:hasNumber a rdf:Property ;
    rdfs:label "hasNumber" ;
    rdfs:comment "Specifies the number associated with an entity." .

cu:hasCredits a rdf:Property ;
    rdfs:label "hasCredits" ;
    rdfs:comment "Specifies the credits assigned to an entity." .

cu:hasFaculty a rdf:Property ;
    rdfs:label "hasFaculty" ;
    rdfs:comment "Specifies the faculty associated with an entity." .

cu:hasProgram a rdf:Property ;
    rdfs:label "hasProgram" ;
    rdfs:comment "Specifies the program associated with an entity." .

cu:hasDepartment a rdf:Property ;
    rdfs:label "hasDepartment" ;
    rdfs:comment "Specifies the department associated with an entity." .

cu:hasLevel a rdf:Property ;
    rdfs:label "hasLevel" ;
    rdfs:comment "Specifies the level (e.g., undergraduate or graduate) associated with an entity." .

cu:hasDescription a rdf:Property ;
    rdfs:label "hasDescription" ;
    rdfs:comment "Specifies the description of an entity." .

cu:hasLink a rdf:Property ; # rdfs:seeAlso
    rdfs:label "hasLink" ;
    rdfs:comment "Specifies the link of an entity." .

cu:hasOutline a rdf:Property ;
    rdfs:label "hasOutline" ;
